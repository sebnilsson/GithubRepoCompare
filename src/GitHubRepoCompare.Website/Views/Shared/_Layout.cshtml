@{
    const string SiteTitle = "GitHub Repo-compare";
    string viewDataTitle = (ViewData["Title"] as string) ?? string.Empty;
    var title = !string.IsNullOrWhiteSpace(viewDataTitle) ? $"{viewDataTitle} - {SiteTitle}" : SiteTitle;
}<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title</title>

    <link rel="stylesheet" href="~/jspm_packages/github/twbs/bootstrap@3.3.7/css/bootstrap.css" />

    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="site-wrap">
        @RenderBody()
    </div>

    <div class="site-footer">
        <div class="container">
            <footer class="well well-sm text-info small">
                &copy; @DateTimeOffset.Now.Year - @SiteTitle
            </footer>
        </div>
    </div>
    
    @RenderSection("scripts", required: false)
</body>
</html>
